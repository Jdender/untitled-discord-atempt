datasource db {
  provider = "postgresql"
  url = "***"
}

generator prisma_client {
  provider = "prisma-client-js"
}

model User {
  id            String        @id
  servers       ServerEntry[]
  username      String
  discriminator String
  email         String
  avatar        String
  refreshToken  String
}

model ServerEntry {
  id       String   @id
  owner    User     @relation(fields: [ownerId], references: [id])
  ownerId  String
  name     String
  icon     String
  features String[]
}
